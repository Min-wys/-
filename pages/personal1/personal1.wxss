/* pages/personal1/personal1.wxss */

.outer {
  position: relative;
}

.personalHeaderLogin {
  padding: 0 40rpx;
}

.personalHeader {
  position: relative;
}

.personalHeader image {
  width: 100%;
  height: 600rpx;
  opacity: 0.7;
}

.headerImg {
  display: flex;
  align-items: center;
  position: absolute;
  top: 130rpx;
}

.headerImg .portrait {
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  margin-right: 30rpx;
}

.personalHeaderMember {
  position: relative;
  top: -310rpx;
  background: linear-gradient(left, red, black);
  background: rgba(0, 0, 0, 0.7);
  height: 260rpx;
  color: #f7d680;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 24rpx;
}

.personalHeaderMember image {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}

.personalHeaderMemberInner {
  display: flex;
  justify-content: space-between;
}

.personalHeaderMemberInner .guiguMember {
  font-size: 24rpx;
  margin-left: 20rpx;
}

.personalHeaderMemberInner .immediatelyOpened {
  background-color: #f9e6af;
  z-index: 1;
  width: 132rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #36343c;
  border-radius: 20px;
}

.atguiguUnion {
  margin: 40rpx 0 20rpx 0;
}

.listenToMusic {
  font-size: 22rpx;
}

/* 下面的白色区域 */

.footerOuter {
  position: absolute;
  top: 480rpx;
  width: 100%;
  height: 100%;
}

.footer {
  background-color: #f5f5f5;
  /* background-color: yellow; */
  margin-top: -10rpx;
  padding: 0 40rpx;
  height: 100%;
}

.footerOuter image {
  width: 100%;
  height: 36rpx;
}

.msg {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}

.msg view {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.msg .iconfont {
  color: red !important;
  font-size: 50rpx !important;
}

.msg .myMsg {
  font-size: 24rpx;
}

.recentPlay {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 40rpx;
}

.recent {
  font-size: 24rpx;
}

.history {
  height: 150rpx;
  line-height: 150rpx;
}

.myItem {
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 0 10rpx;
}

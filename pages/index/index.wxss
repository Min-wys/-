/**index.wxss**/

/* 每日推荐 */

.nav {
  display: flex;
}

.nav view {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  align-items: center;
}

.swiperItem image {
  width: 100%;
  height: 100%;
}

.nav view .iconfont {
  width: 100rpx;
  height: 100rpx;
  background: rgb(240, 19, 19);
  color: white;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  margin: 20rpx 0;
  font-size: 50rpx;
}

.nav view text {
  font-size: 28rpx;
}

/* 推荐歌曲 */

.recommend {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.header-top {
  color: #666;
  font-size: 28rpx;
}

.header-bottom {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.header-bottom .recommendMany {
  border: 1px solid #000;
  font-size: 24rpx;
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
}

/* 滑块区域 */

.recommendScoll {
  display: flex;
  height: 300rpx;
}

.recommendScoll image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.recommendScoll view {
  width: 200rpx;
  margin-right: 20rpx;
}

.recommendScoll .scollText {
  /* 设置多行文本隐藏 */
  height: 90rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜 */

.rankingList {
  padding: 0 20rpx;
  margin: 40rpx 0;
}

.rankingSwiper {
  height: 470rpx;
}

.rankingList .swiperText {
  font-size: 24rpx;
}

.rankingList .rankingItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.rankingList .rankingItem {
  margin: 20rpx 0;
  height: 100rpx;
  display: flex;
  font-size: 24rpx;
}

.bgc {
  background-color: #fbfbfb;
  width: 96%;
  height: 424rpx !important;
  border-radius: 10rpx;
  overflow: hidden;
}

.rankingList .rankingNum {
  align-self: center;
  margin: 25rpx;
}

.rankingList .rankingText {
  width: 400rpx;
  align-self: center;
  margin: 25rpx;
}
